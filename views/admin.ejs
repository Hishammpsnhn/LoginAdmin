        justify-content: center;
        color: white;
        text-align: center;
      }

      .hero h1 {
        font-size: 4rem;
        margin-bottom: 1rem;
      }

      .hero p {
        font-size: 1.5rem;
      }
      .card {
        margin-top: 20px;
      }

      footer {
        color: white;
        padding: 1rem 0;
        text-align: center;
        position: absolute;
        width: 100%;
        bottom: 0;
      }
    </style>
  </head>

  <body>
    <nav class="navbar navbar-expand bg-dark navbar-dark">
      <div class="container">
        <a href="#" class="navbar-brand">LOGO</a>
        <ul class="navbar-nav d-none d-md-flex">
          <li class="nav-item">
            <a href="#" class="nav-link active">Home</a>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link">Home</a>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link">Home</a>
          </li>
        </ul>
        <div class="navbar-text d-flex">
          <input
            type="text"
            placeholder="search.."
            class="rounded p-1 border"
          />
          <!-- <i class="bi bi-box-arrow-right"></i> -->
          <a
            href="/route/logout"
            type="button"
            class="btn btn-danger btn-sm mx-2"
            >LOGOUT</a
          >
        </div>
      </div>
    </nav>
    <h2>Welcome <%= user %></h2>
    <!-- Features Section -->
    <div class="container">
      <table class="table border" style="overflow: scroll">
        <thead class="table-dark">
          <tr>
            <th scope="col">#</th>
            <%- include('model') %>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach((item) => { %>
          <tr id="<%= item.id %>">
            <th scope="row"><%= item.id %></th>
            <td><%= item.userName %></td>
            <td><%= item.email %></td>
            <td>
              <button
                type="button"
                class="btn btn-primary"
                data-bs-toggle="modal"
                data-bs-target="#exampleModal"
              >
                Edit
              </button>
            </td>
            <td>
              <button
                onclick="deleteUser('<%= item.id %>')"
                type="button"
                class="btn btn-danger"
              >
                Delete
              </button>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <!-- Button trigger modal -->
    <!-- Button trigger modal -->
    <!-- Button trigger modal -->
